PROCEDURE SNTRST_STRE_DRAFTS_MNTN_AMT_ST(
/*****************************************************************************
	SNTRST_STRE_DRAFTS_MNTN_AMT_ST
    This procedure will display the suntrust bank daily drafts maintenance records
    for given transaction date.
    SUNTRUST DRAFT MAINT RECORDS WRITTEN (8a) - STBD1300

created : 02/23/2017 axt754 CCN Project....

******************************************************************************/
    IN_TRANSACTION_DATE DATE)
IS
    V_CLOB   CLOB;
    cursor V_DFT_MAINT_REC (IN_TRANSACTION_DATE DATE) IS
    SELECT *
    FROM STORE_DRAFTS SD
    WHERE AMOUNT_CHANGE_DATE = IN_TRANSACTION_DATE
    AND EXISTS (SELECT 1
                FROM COST_CENTER
                WHERE COST_CENTER_CODE = SD.COST_CENTER_CODE
                AND STATEMENT_TYPE NOT IN ('CN', 'GC', 'AU'));

BEGIN

    FOR rec in V_DFT_MAINT_REC(IN_TRANSACTION_DATE) LOOP
                -- Appended '="attribute"', so that if opened in excel the '0' on left side wouldn't be ignored..
                V_CLOB := V_CLOB||
                          '="'||rec.COST_CENTER_CODE||'",'||
                          '="'||rec.CHECK_SERIAL_NUMBER||'",'||
                          '="'||rec.CUSTOMER_ACCOUNT_NUMBER||'",'||
                          '="'||rec.TRANSACTION_DATE||'",'||
                          '="'||rec.TERMINAL_NUMBER||'",'||
                          '="'||rec.TRANSACTION_NUMBER||'",'||
                          '="'||rec.CUSTOMER_JOB_NUMBER||'",'||
                          '="'||rec.POS_TRANSACTION_CODE||'",'||
                          '="'||rec.POS_TRANSACTION_TIME||'",'||
                          '="'||rec.BANK_NUMBER||'",'||
                          '="'||rec.BANK_ACCOUNT_NUMBER||'",'||
                          '="'||rec.BANK_REFERENCE||'",'||
                          '="'||rec.PAYEE_NAME||'",'||
                          '="'||rec.EMPLOYEE_NUMBER||'",'||
                          '="'||rec.ISSUE_DATE||'",'||
                          '="'||rec.PAID_DATE||'",'||
                          '="'||rec.VOID_DATE||'",'||
                          '="'||rec.AMOUNT_CHANGE_DATE||'",'||
                          '="'||rec.GROSS_AMOUNT||'",'||
                          '="'||rec.RETAIN_AMOUNT||'",'||
                          '="'||rec.NET_AMOUNT||'",'||
                          '="'||rec.ORIGINAL_NET_AMOUNT||'",'||
                          '="'||rec.BANK_PAID_AMOUNT||'",'||
                          '="'||rec.TRANSACTION_SOURCE||'",'||
                          '="'||rec.CHANGE_DATE||'",'||
                          '="'||rec.CHANGE_SOURCE||'",'||
                          '="'||rec.SLS_BOOK_DATE||'",'||
                          '="'||rec.CYCLE_RUN_NUMBER||'"'|| CHR(10);
    END LOOP;

    IF V_CLOB <> EMPTY_CLOB() THEN
        -- Append Header
        V_CLOB := 'COST_CENTER_CODE,'
                   ||'CHECK_SERIAL_NUMBER,'
                   ||'CUSTOMER_ACCOUNT_NUMBER,'
                   ||'TRANSACTION_DATE,'
                   ||'TERMINAL_NUMBER,'
                   ||'TRANSACTION_NUMBER,'
                   ||'CUSTOMER_JOB_NUMBER,'
                   ||'POS_TRANSACTION_CODE,'
                   ||'POS_TRANSACTION_TIME,'
                   ||'BANK_NUMBER,'
                   ||'BANK_ACCOUNT_NUMBER,'
                   ||'BANK_REFERENCE,'
                   ||'PAYEE_NAME,'
                   ||'EMPLOYEE_NUMBER,'
                   ||'ISSUE_DATE,'
                   ||'PAID_DATE,'
                   ||'VOID_DATE,'
                   ||'AMOUNT_CHANGE_DATE,'
                   ||'GROSS_AMOUNT,'
                   ||'RETAIN_AMOUNT,'
                   ||'NET_AMOUNT,'
                   ||'ORIGINAL_NET_AMOUNT,'
                   ||'BANK_PAID_AMOUNT,'
                   ||'TRANSACTION_SOURCE,'
                   ||'CHANGE_DATE,'
                   ||'CHANGE_SOURCE,'
                   ||'SLS_BOOK_DATE,'
                   ||'CYCLE_RUN_NUMBER'||CHR(10)||V_CLOB;
        MAIL_PKG.SEND_MAIL('SD_DLY_SNTRST_MAINT',NULL, NULL, V_CLOB);
    END IF;

