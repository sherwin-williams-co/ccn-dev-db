BEGIN
    SELECT SUM(NVL(DECODE(SD.AMOUNT_CHANGE_DATE, NULL, SD.ORIGINAL_NET_AMOUNT,SD.NET_AMOUNT), 0)) 
      INTO V_RETURN_VALUE
