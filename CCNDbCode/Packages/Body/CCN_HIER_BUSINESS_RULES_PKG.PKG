 </HIERARCHY_DETAIL>

created : 06/27/2013 SH CCN
********************************************************************************/
IN_HIERARCHY_DETAIL_REC             HIERARCHY_DETAIL%ROWTYPE)

IS

   V_COUNT NUMBER := 0;
   V_CC_EXISTS_ERR EXCEPTION;
