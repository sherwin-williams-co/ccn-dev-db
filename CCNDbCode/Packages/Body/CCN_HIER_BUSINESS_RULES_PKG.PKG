    WHEN OTHERS THEN
        RETURN V_RETURN_VALUE;
END IS_HRCHY_TO_EQUAL_HRCHY_FROM;


FUNCTION IS_HRCHY_EFFCTV_EXP_PAST(
/***********************************************************
This function will check if the Effective/Expiration dates passed are in the past
for PRICE_DISTRICT Hierarchy

Created : 04/21/2017 sxh487 CCN Project Team....
Modified:
************************************************************/
    IN_HIERARCHY_DETAIL_REC     IN     HIERARCHY_DETAIL%ROWTYPE)
RETURN VARCHAR2
IS
    V_RETURN_VALUE VARCHAR2(1) := 'N';
BEGIN
    IF IN_HIERARCHY_DETAIL_REC.HRCHY_HDR_NAME = 'PRICE_DISTRICT' 
        AND (IN_HIERARCHY_DETAIL_REC.HRCHY_DTL_EFF_DATE < TRUNC(SYSDATE) OR IN_HIERARCHY_DETAIL_REC.HRCHY_DTL_EXP_DATE < TRUNC(SYSDATE)) THEN
        V_RETURN_VALUE := 'Y';
    END IF;
    RETURN V_RETURN_VALUE;
EXCEPTION
    WHEN OTHERS THEN
        RETURN V_RETURN_VALUE;
END IS_HRCHY_EFFCTV_EXP_PAST;

